<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8DEDE"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:fontFamily="casual"
        android:rotation="0"
        android:scaleX="1"
        android:scaleY="1.9"
        android:text="Lost Mab Lib"
        android:textColor="#6A1111"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/ll_hintedwords"
        android:layout_width="378dp"
        android:layout_height="506dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/size">

        <EditText
            android:id="@+id/et_adjective"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Adjective"
            android:inputType="text"
            android:textColor="#5E17A5"
            android:textColorHint="#B17171" />

        <EditText
            android:id="@+id/et_noun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Noun"
            android:inputType="text"
            android:textColor="#5E17A5"
            android:textColorHint="#B17171" />

        <EditText
            android:id="@+id/et_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Time"
            android:inputType="time"
            android:textColor="#5E17A5"
            android:textColorHint="#B17171" />

        <EditText
            android:id="@+id/et_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Number"
            android:inputType="number"
            android:textColor="#5E17A5"
            android:textColorHint="#B17171" />

        <EditText
            android:id="@+id/et_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Date"
            android:inputType="date"
            android:textColor="#5E17A5"
            android:textColorHint="#B17171" />

        <EditText
            android:id="@+id/et_animal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Animal"
            android:inputType="text"
            android:textColor="#5E17A5"
            android:textColorHint="#B17171" />

        <EditText
            android:id="@+id/et_noun2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Noun"
            android:inputType="text"
            android:textColor="#5E17A5"
            android:textColorHint="#B17171" />

        <EditText
            android:id="@+id/et_time2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Time"
            android:inputType="time"
            android:textColor="#5E17A5"
            android:textColorHint="#B17171" />

        <EditText
            android:id="@+id/et_emotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Emotion"
            android:inputType="text"
            android:textColor="#5E17A5"
            android:textColorHint="#B17171" />

        <EditText
            android:id="@+id/et_adjective2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Adjective"
            android:inputType="text"
            android:textColor="#5E17A5"
            android:textColorHint="#B17171" />

        <EditText
            android:id="@+id/et_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Food"
            android:inputType="text"
            android:textColor="#5E17A5"
            android:textColorHint="#B17171" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="237dp"
        android:layout_height="79dp"
        android:fontFamily="serif"
        android:text="Continue"
        android:textColor="#4EFF27"
        android:textSize="38sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_hintedwords" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="118dp" />

</androidx.constraintlayout.widget.ConstraintLayout>